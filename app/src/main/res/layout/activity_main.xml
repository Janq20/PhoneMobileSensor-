<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:src="@drawable/psm"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo aplikacji" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:padding="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ogolne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="OGÓLNE"
            android:textSize="7sp"
            android:maxLines="1"
            app:backgroundTint="#FF6666"
            app:cornerRadius="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_gps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="GPS"
            android:textSize="7sp"
            android:maxLines="1"
            app:backgroundTint="#33CCFF"
            app:cornerRadius="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_zyroskop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ŻYROSKOP"
            android:textSize="6sp"
            android:maxLines="1"
            app:backgroundTint="#CC66FF"
            app:cornerRadius="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_system"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SYSTEM"
            android:textSize="7sp"
            android:maxLines="1"
            app:backgroundTint="#6666FF"
            app:cornerRadius="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_aplikacja"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="APLIKACJA"
            android:textSize="6sp"
            android:maxLines="1"
            app:backgroundTint="#FF9933"
            app:cornerRadius="0dp"
            app:strokeColor="#000000"
            app:strokeWidth="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#33B5FF"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/opis_parametrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OPIS PARAMETRÓW"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:lineSpacingExtra="6dp"
                android:padding="16dp" />

            <LinearLayout
                android:id="@+id/layout_wykresy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UŻYCIE RAM (MB)"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_ram"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POZIOM BATERII (%)"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_battery"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TEMPERATURA BATERII (°C)"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_temp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NATĘŻENIE ŚWIATŁA (lx)"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_light"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TAKTOWANIE CPU (GHz)"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_cpu"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_aplikacja_wykres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wybierz urządzenie (gałąź pod statystyki_urzadzen)"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <Spinner
                    android:id="@+id/spinner_devices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFFFFF" />

                <EditText
                    android:id="@+id/et_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ile ostatnich próbek (np. 20)"
                    android:inputType="number"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFFFFF"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btn_load"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wczytaj i pokaż wykresy"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#444444"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAM (MB) / Bateria (%) / Temp (°C) / CPU (GHz)"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RAM wolne (MB)"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_app_ram"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bateria (%)"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_app_battery"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperatura (°C)"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_app_temp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CPU (GHz)"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="6dp"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_app_cpu"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#222222"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="12dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>